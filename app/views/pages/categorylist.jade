extends ../layout

block content
    .container
        .row
            table.table.table-hover.table-borderd
                thead
                    tr
                        th 电影分类
                        th 查看
                        th 更新
                        th 删除
                tbody
                    each item in categories
                        tr(class="item-id-#{item._id}")
                            td #{item.name}
                            td: a(target="_blank", href="../movie/#{item._id}") 查看
                            td: a(target="_blank", href="../admin/update#{item._id}") 修改
                            td
                                button#delCategory.btn.btn-danger.del(type="button", data-id="#{item._id}") 删除
    script(src="/js/delList.js")