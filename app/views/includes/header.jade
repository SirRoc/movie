.container.mt-5
    .row
        //- .page-header
        //-     h1 #{title}
        .col-md-2
            small Roc影视
        .col-md-12.mt-2.mb-2
            form.mb-2.clearfix(action="/categorySearch", method="get")
                button.btn.btn-primary.float-right(type="submit") 搜索
                input.float-right.mt-1.mr-1(type="text", name="searchContent", placeholder="Search")
.navbar.navbar-default.fixed-top.bg-light
    .container
        .navbar-header
            a.navbar-brand(href="/") Roc影视
        if user
            p.navbar-text.navbar-right
                span 欢迎您,#{user.name}
                span &nbsp;|&nbsp;
                a.navbar-link(href="/logout") 注销
        else
            p.navbar-text.navbar-right
                a.navbar-link(href="#", data-toggle="modal", data-target="#signupModal") 注册
                span &nbsp;|&nbsp;
                a.navbar-link(href="#", data-toggle="modal", data-target="#signinModal") 登陆
#signupModal.modal.fade
    .modal-dialog
        .modal-content
            form(method="POST", action="/user/signup")
                .modal-header 注册
                .modal-body 
                    .form-group
                        label(for="signupName") 用户名
                        input#signupName.form-control(name="user[name]",type="text")
                    .form-group
                        label(for="signupPassword") 密码
                        input#signupName.form-control(name="user[password]",type="text")
                .modal-footer
                    button.btn.btn-default(type="button", data-dismiss="modal") 关闭
                    button.btn.btn-success(type="submit") 提交
                    
#signinModal.modal.fade
    .modal-dialog
        .modal-content
            form(method="POST", action="/user/signin")
                .modal-header 登陆
                .modal-body 
                    .form-group
                        label(for="signinName") 用户名
                        input#signupName.form-control(name="user[name]",type="text")
                    .form-group
                        label(for="signinPassword") 密码
                        input#signupName.form-control(name="user[password]",type="text")
                .modal-footer
                    button.btn.btn-default(type="button", data-dismiss="modal") 关闭
                    button.btn.btn-success(type="submit") 提交